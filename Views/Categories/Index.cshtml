@{
    ViewData["Title"] = "Animal Categories";
}

<!-- Categories Header -->
<div class="bradcam_area" style="background-image: url('/img/banner/bradcam.png');">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcam_text text-center">
                    <h3>Animal Categories</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Categories Section -->
<section class="service_area section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-10">
                <div class="section_title text-center mb-95">
                    <h3>Browse by Animal Type</h3>
                    <p>Find information, products, and services for your beloved pets by category.</p>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Cat Card -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="single_service">
                    <div class="service_thumb" style="height: 220px; overflow: hidden;">
                        <img src="~/img/service/cat.jpg" alt="Cats" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                    <div class="service_content text-center">
                        <h3>Cats</h3>
                        <p>Find everything you need for your feline friends, from food to toys and healthcare.</p>
                        <a href="@Url.Action("Cats", "Categories")" class="boxed-btn3">Learn More</a>
                    </div>
                </div>
            </div>

            <!-- Dog Card -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="single_service">
                    <div class="service_thumb" style="height: 220px; overflow: hidden;">
                        <img src="~/img/service/dog.jpg" alt="Dogs" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                    <div class="service_content text-center">
                        <h3>Dogs</h3>
                        <p>Discover a wide range of products and services for your loyal canine companions.</p>
                        <a href="@Url.Action("Dogs", "Categories")" class="boxed-btn3">Learn More</a>
                    </div>
                </div>
            </div>

            <!-- Bird Card -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="single_service">
                    <div class="service_thumb" style="height: 220px; overflow: hidden;">
                        <img src="~/img/service/bird.jpg" alt="Birds" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                    <div class="service_content text-center">
                        <h3>Birds</h3>
                        <p>Find specialized care, food, and housing options for your feathered friends.</p>
                        <a href="@Url.Action("Birds", "Categories")" class="boxed-btn3">Learn More</a>
                    </div>
                </div>
            </div>

            <!-- Other Animals Card -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="single_service">
                    <div class="service_thumb" style="height: 220px; overflow: hidden;">
                        <img src="~/img/service/other.jpg" alt="Other Animals" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                    <div class="service_content text-center">
                        <h3>Other Animals</h3>
                        <p>Explore products and services for small pets, reptiles, fish, and exotic animals.</p>
                        <a href="@Url.Action("Other", "Categories")" class="boxed-btn3">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
